{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es5",
        "lib": ["es6", "dom"],
        "types": ["reflect-metadata"],
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noImplicitAny": true
    },
    "include": ["./src/**/*.ts", "src/app.js"],
    "exclude": ["./node_modules", "./dist"]
}
